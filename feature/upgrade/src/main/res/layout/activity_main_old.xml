<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#0d0d0d"
            android:textSize="16dp"
            android:layout_gravity="bottom"
            android:text="version_name: "/>
        <TextView
            android:id="@+id/txt_version_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fa1b07d2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text=""/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aca9a9"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#0d0d0d"
            android:textSize="16dp"
            android:layout_gravity="bottom"
            android:text="version_code: "/>
        <TextView
            android:id="@+id/txt_sdk_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fa1b07d2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text=""/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aca9a9" />
    <LinearLayout
        android:id="@+id/layout_check_new_version"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_check_new_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#fa1b07d2"
            android:textStyle="bold"
            android:theme="@style/Widget.AppCompat.Button"
            android:text="1. check new version"/>
        <TextView
            android:id="@+id/txt_check_new_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fa1b07d2"
            android:text=""/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aca9a9"
        />
    <LinearLayout
        android:id="@+id/layout_download_new_version"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_download_new_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#8b8a8a"
            android:textStyle="bold"
            android:clickable="false"
            android:enabled="false"
            android:theme="@style/Widget.AppCompat.Button"
            android:text="2. Click To Download"/>
        <ProgressBar
            android:id="@+id/bar_download_new_version"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"
            />
        <TextView
            android:id="@+id/txt_download_new_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fa1b07d2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text=""/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aca9a9"
        />
    <LinearLayout
        android:id="@+id/layout_download_new_version_status"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_download_new_version_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#8b8a8a"
            android:textStyle="bold"
            android:clickable="false"
            android:enabled="false"
            android:theme="@style/Widget.AppCompat.Button"
            android:text="3. Pause Downloadind"
            />
        <TextView
            android:id="@+id/txt_download_new_version_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fa1b07d2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text=""/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aca9a9"
        />
    <LinearLayout
        android:id="@+id/layout_install_new_version"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_install_new_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#8b8a8a"
            android:textStyle="bold"
            android:clickable="false"
            android:enabled="false"
            android:theme="@style/Widget.AppCompat.Button"
            android:text="4. Install APK"
            />
        <TextView
            android:id="@+id/txt_install_new_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fa1b07d2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_log"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fa7d7d83"
            android:textSize="14dp"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#8b8a8a"
            android:textStyle="bold"
            android:theme="@style/Widget.AppCompat.Button"
            android:text="Get Device ID "
            />
        <TextView
            android:id="@+id/txt_device_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fa1b07d2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text=""/>
    </LinearLayout>


</LinearLayout>
